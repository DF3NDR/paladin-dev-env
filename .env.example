# .env.example - Copy to .env and customize for your environment

# Application Configuration
APP_ENV=development
RUST_LOG=info
RUST_BACKTRACE=0

# Server Configuration
APP_SERVER_HOST=0.0.0.0
APP_SERVER_PORT=8080

# LLM Configuration
LLM_TYPE=openai
LLM_URL=https://api.openai.com/v1
LLM_API_KEY=your_openai_api_key_here

# Redis Queue Configuration
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379
APP_REDIS_PASSWORD=
APP_REDIS_DB=0
APP_REDIS_CONNECTION_TIMEOUT=30
APP_REDIS_KEY_PREFIX=in4me:queue
APP_REDIS_MAX_RETRIES=3
APP_REDIS_ENABLE_PRIORITY_QUEUES=true

# Redis Service Configuration (Docker)
REDIS_PASSWORD=
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# MinIO File Storage Configuration
APP_MINIO_ENDPOINT=localhost:9000
APP_MINIO_ACCESS_KEY=minioadmin
APP_MINIO_SECRET_KEY=minioadmin
APP_MINIO_BUCKET=in4me-files
APP_MINIO_REGION=us-east-1
APP_MINIO_SECURE=false
APP_MINIO_PATH_STYLE=true
APP_MINIO_CONNECTION_TIMEOUT=30
APP_MINIO_REQUEST_TIMEOUT=300
APP_MINIO_MAX_IDLE_CONNS=10
APP_MINIO_MAX_FILE_SIZE=104857600
APP_MINIO_ALLOWED_EXTENSIONS=txt,md,json,pdf,doc,docx,jpg,png,gif,rs,py,js,html,css,xml

# MinIO Service Configuration (Docker)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# Message Service Configuration
MESSAGE_SERVICE_MAX_QUEUE_SIZE=10000
MESSAGE_SERVICE_WORKER_THREADS=4
MESSAGE_SERVICE_ENABLE_PERSISTENCE=false
MESSAGE_SERVICE_DEFAULT_TTL_SECONDS=3600
MESSAGE_SERVICE_RETRY_ATTEMPTS=3
MESSAGE_SERVICE_RETRY_DELAY_MS=1000

# Database Configuration
DATABASE_URL=sqlite:database.db
APP_MAX_FILE_SIZE=10485760

# Test Configuration
USE_EXTERNAL_TEST_SERVICES=false
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380
TEST_MINIO_ENDPOINT=localhost:9010
TEST_MINIO_ACCESS_KEY=testuser
TEST_MINIO_SECRET_KEY=testpass123
TEST_LOG=0

# Development Tools
ENABLE_DEBUG_TOOLS=true
ENABLE_PROFILING=false

# Security Configuration
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
WORKER_THREADS=4
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ANALYTICS=false
ENABLE_CACHING=true
CACHE_TTL=3600
