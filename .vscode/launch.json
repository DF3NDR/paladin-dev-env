{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'in4me'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=in4me",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "in4me",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug src tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "in4me",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug repository tests (tests/)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=repository",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "repository",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug specific test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=in4me",
                    "${input:testName}"
                ],
                "filter": {
                    "name": "in4me",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "integration",
                    "kind": "test"
                }
            },
            // "sourceMap": {
            //     "/rustc/<commit_hash>/": "${workspaceFolder}/.rustup/toolchains/<toolchain>/lib/rustlib/src/rust/"},
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug functional tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=functional",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "functional",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests (ignored)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_test",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "integration_test",
                    "kind": "test"
                }
            },
            "args": ["--", "--ignored"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug all tests (including ignored)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "in4me",
                    "kind": "lib"
                }
            },
            "args": ["--", "--include-ignored"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug all integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--tests",
                    "--package=in4me"
                ],
                "filter": {
                    "name": "in4me",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Enter test name to debug",
            "default": "test_content_item_properties",
            "type": "promptString"
        }
    ]
}