{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'paladin'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=paladin",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "paladin",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug src tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "paladin",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug repository tests (tests/)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=repository",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "repository",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug specific test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=paladin",
                    "${input:testName}"
                ],
                "filter": {
                    "name": "paladin",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "name": "Debug Specific Integration Test",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/${fileBasenameNoExtension}",
            "args": ["--test", "--", "--exact", "my_specific_test"],
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                "${workspaceFolder}/target/debug/deps/": "${workspaceFolder}/tests/integration/"
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "integration",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            // "sourceMap": {
            //     "${workspaceFolder}/target/debug/deps/": "${workspaceFolder}/tests/integration/",
            //     "/home/**/*.rs"
            // },
        },
        {
            "name": "Debug Integration Test (select file)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/${fileBasenameNoExtension}",
            "args": ["--test=integration", "--nocapture"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "sourceMap": {
                "${workspaceFolder}/target/debug/deps/": "${workspaceFolder}/tests/",
                "/home/**/*.rs": null
            },
            // "preLaunchTask": "cargo test --no-run"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug functional tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=functional",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "functional",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests (ignored)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_test",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "integration_test",
                    "kind": "test"
                }
            },
            "args": ["--", "--ignored"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug all tests (including ignored)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "paladin",
                    "kind": "lib"
                }
            },
            "args": ["--", "--include-ignored"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug all integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--tests",
                    "--package=paladin"
                ],
                "filter": {
                    "name": "paladin",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Enter test name to debug",
            "default": "test_content_item_properties",
            "type": "promptString"
        }
    ]
}